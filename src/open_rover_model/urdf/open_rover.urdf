    </visual>
    <collision>
      <geometry>
        <box size="0.04 0.75 0.04" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.8"/>
      <box_inertia m="1.8" x="0.04" y="0.75" z="0.04"/>
    </inertial>
  </link>
  <link name="main_frame_end2">
    <visual>
      <geometry>
        <box size="0.04 0.75 0.04" />
      </geometry>
