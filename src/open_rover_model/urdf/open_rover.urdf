<?xml version="1.0"?>
<robot name="open_rover">
  <!-- Dummy Root Link (No Inertia for KDL Compatibility) -->
  <link name="dummy_root">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.01"/> <!-- Minimal visual for debugging -->
      </geometry>
      <material name="transparent">
        <color rgba="0 0 0 0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- Materials -->
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="orange">
    <color rgba="1.0 0.423529411765 0.0392156862745 1.0"/>
  </material>
  <material name="brown">
    <color rgba="0.870588235294 0.811764705882 0.764705882353 1.0"/>
  </material>
  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <!-- Macros -->
  <macro name="box_inertia" params="m x y z">
    <inertia ixx="${m*(y*y+z*z)/12}" ixy="0" ixz="0" iyy="${m*(x*x+z*z)/12}" iyz="0" izz="${m*(x*x+y*y)/12}" />
  </macro>

  <macro name="cylinder_inertia" params="m r h">
    <inertia ixx="${m*(3*r*r+h*h)/12}" ixy="0" ixz="0" iyy="${m*(3*r*r+h*h)/12}" iyz="0" izz="${m*r*r/2}" />
  </macro>

  <macro name="sphere_inertia" params="m r">
    <inertia ixx="${2*m*r*r/5}" ixy="0" ixz="0" iyy="${2*m*r*r/5}" iyz="0" izz="${2*m*r*r/5}" />
  </macro>

  <!-- Main Frame -->
  <link name="main_frame_base">
    <visual>
      <geometry>
        <box size="0.76 0.04 0.04" />
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.76 0.04 0.04" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.8"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.087" iyz="0.0" izz="0.087" />
    </inertial>
  </link>
  <link name="main_frame_end1">
    <visual>
      <geometry>
        <box size="0.04 0.75 0.04" />
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.04 0.75 0.04" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.8"/>
      <inertia ixx="0.085" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.085" />
    </inertial>
  </link>
  <link name="main_frame_end2">
    <visual>
      <geometry>
        <box size="0.04 0.75 0.04" />
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.04 0.75 0.04" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.8"/>
      <inertia ixx="0.085" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.085" />
    </inertial>
  </link>
  <link name="main_frame_side1">
    <visual>
      <geometry>
        <box size="0.76 0.04 0.04" />
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.76 0.04 0.04" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.8"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.087" iyz="0.0" izz="0.087" />
    </inertial>
  </link>
    <link name="main_frame_leg1">
    <visual>
      <geometry>
        <box size="0.04 0.04 0.5" />
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.04 0.04 0.5" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.2"/>
      <inertia ixx="0.025" ixy="0.0" ixz="0.0" iyy="0.025" iyz="0.0" izz="0.002" />
    </inertial>
  </link>
    <link name="main_frame_leg2">
    <visual>
      <geometry>
        <box size="0.04 0.04 0.5" />
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.04 0.04 0.5" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.2"/>
      <inertia ixx="0.025" ixy="0.0" ixz="0.0" iyy="0.025" iyz="0.0" izz="0.002" />
    </inertial>
  </link>
  <link name="sheet_metal_box">
    <visual>
      <geometry>
        <box size="0.76 0.75 0.1" />
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.76 0.75 0.1" />
      </geometry>
    </collision>
    <inertial>
      <mass value="11.3"/>
      <inertia ixx="0.54" ixy="0.0" ixz="0.0" iyy="0.55" iyz="0.0" izz="1.08" />
    </inertial>
  </link>

  <joint name="main_frame_end1_joint" type="fixed">
    <parent link="main_frame_base"/>
    <child link="main_frame_end1"/>
    <origin xyz="0.36 0.375 0" rpy="0 0 0"/>
  </joint>
  <joint name="main_frame_end2_joint" type="fixed">
    <parent link="main_frame_base"/>
    <child link="main_frame_end2"/>
    <origin xyz="-0.36 0.375 0" rpy="0 0 0"/>
  </joint>
  <joint name="main_frame_side1_joint" type="fixed">
    <parent link="main_frame_base"/>
    <child link="main_frame_side1"/>
    <origin xyz="0 0.75 0" rpy="0 0 0"/>
  </joint>
  <joint name="main_frame_leg1_joint" type="fixed">
    <parent link="main_frame_base"/>
    <child link="main_frame_leg1"/>
    <origin xyz="0.36 0.73 -0.23" rpy="0 0 0"/>
  </joint>
  <joint name="main_frame_leg2_joint" type="fixed">
    <parent link="main_frame_base"/>
    <child link="main_frame_leg2"/>
    <origin xyz="-0.36 0.73 -0.23" rpy="0 0 0"/>
  </joint>
  <joint name="sheet_metal_box_joint" type="fixed">
    <parent link="main_frame_base"/>
    <child link="sheet_metal_box"/>
    <origin xyz="0 0.355 -0.05" rpy="0 0 0"/>
  </joint>


  <!-- Pivot Frame -->
  <link name="pivot_frame_base">
    <visual>
      <geometry>
        <box size="0.75 0.04 0.04" />
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.75 0.04 0.04" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.8"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.085" iyz="0.0" izz="0.085" />
    </inertial>
  </link>
  <link name="pivot_frame_leg1">
    <visual>
      <geometry>
        <box size="0.04 0.04 0.5" />
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.04 0.04 0.5" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.2"/>
      <inertia ixx="0.025" ixy="0.0" ixz="0.0" iyy="0.025" iyz="0.0" izz="0.002" />
