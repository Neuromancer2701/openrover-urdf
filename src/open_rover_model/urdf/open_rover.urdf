    </collision>
    <inertial>
      <mass value="1.8"/>
      <box_inertia m="1.8" x="0.76" y="0.04" z="0.04"/>
    </inertial>
  </link>
    <link name="main_frame_leg1">
    <visual>
      <geometry>
        <box size="0.04 0.04 0.5" />
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.04 0.04 0.5" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.2"/>
      <box_inertia m="1.2" x="0.04" y="0.04" z="0.5"/>
    </inertial>
  </link>
    <link name="main_frame_leg2">
    <visual>
      <geometry>
        <box size="0.04 0.04 0.5" />
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.04 0.04 0.5" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.2"/>
      <box_inertia m="1.2" x="0.04" y="0.04" z="0.5"/>
