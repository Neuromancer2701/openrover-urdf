      <box_inertia m="1.2" x="0.04" y="0.04" z="0.5"/>
    </inertial>
  </link>

  <joint name="pivot_frame_leg1_joint" type="fixed">
    <parent link="pivot_frame_base"/>
    <child link="pivot_frame_leg1"/>
    <origin xyz="0.355 0 -0.23" rpy="0 0 0"/>
  </joint>
  <joint name="pivot_frame_leg2_joint" type="fixed">
    <parent link="pivot_frame_base"/>
    <child link="pivot_frame_leg2"/>
    <origin xyz="-0.355 0 -0.23" rpy="0 0 0"/>
  </joint>


  <!-- Wheels -->
  <macro name="wheel" params="prefix parent x y z">
    <link name="${prefix}_wheel">
      <visual>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <geometry>
          <cylinder radius="0.15" length="0.11"/>
        </geometry>
        <material name="black"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <geometry>
          <cylinder radius="0.15" length="0.11"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="2"/>
        <cylinder_inertia m="2" r="0.15" h="0.11"/>
      </inertial>
    </link>
    <link name="${prefix}_spindle">
        <visual>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <geometry>
          <cylinder radius="0.008" length="0.055"/>
        </geometry>
        <material name="grey"/>
      </visual>
    </link>

    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${prefix}_wheel"/>
      <origin xyz="${x} ${y} ${z}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
    <joint name="${prefix}_spindle_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}_spindle"/>
      <origin xyz="${x} ${y} ${z}" rpy="0 0 0"/>
    </joint>
  </macro>

  <wheel prefix="back_left" parent="main_frame_leg1" x="0" y="0.07" z="-0.215"/>
  <wheel prefix="back_right" parent="main_frame_leg2" x="0" y="-0.07" z="-0.215"/>
  <wheel prefix="front_left" parent="pivot_frame_leg1" x="0" y="0.07" z="-0.215"/>
  <wheel prefix="front_right" parent="pivot_frame_leg2" x="0" y="-0.07" z="-0.215"/>

  <!-- Joints -->
  <!-- Dummy Root to Main Frame -->
  <joint name="dummy_to_main_frame" type="fixed">
    <parent link="dummy_root"/>
    <child link="main_frame_base"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Pivot Joint -->
  <joint name="pivot_joint" type="revolute">
    <parent link="main_frame_base"/>
    <child link="pivot_frame_base"/>
    <origin xyz="-0.38 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.785" upper="0.785" effort="100" velocity="1.0"/>
  </joint>


</robot>