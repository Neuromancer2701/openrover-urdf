  </link>
  <link name="sheet_metal_box">
    <visual>
      <geometry>
        <box size="0.76 0.75 0.1" />
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.76 0.75 0.1" />
