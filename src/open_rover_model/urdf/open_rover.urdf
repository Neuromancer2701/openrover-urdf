  </link>
  <link name="pivot_frame_leg2">
    <visual>
      <geometry>
        <box size="0.04 0.04 0.5" />
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.04 0.04 0.5" />
